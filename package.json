{
  "name": "action-hugo",
  "description": "GitHub Action for Hugo, the world's fastest framework for building websites",
  "main": "lib/main.js",
  "engines": {
    "node": ">=16.16.0",
    "npm": ">=8.11.0"
  },
  "scripts": {
    "compile": "tsc",
    "precompile": "prettier --write src/**/*.ts",
    "postcompile": "prettier --write lib/**/*.js",
    "lint:check": "eslint src/**/*.ts",
    "lint": "eslint --fix src/**/*.ts",
    "format:check": "prettier --check --ignore-unknown .",
    "format": "prettier --write --ignore-unknown .",
    "build": "ncc build lib/main.js -o dist",
    "prebuild": "npm run compile",
    "postbuild": "prettier --write dist/**/*.js",
    "update": "npx -y typesync && npx -y npm-check-updates -u",
    "postupdate": "npm install && npm update && npm run format && npm run build"
  },
  "repository": "github:frenchvandal/action-hugo",
  "keywords": [
    "actions",
    "hugo",
    "build",
    "package",
    "website"
  ],
  "author": "frenchvandal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/frenchvandal/action-hugo/issues"
  },
  "homepage": "https://github.com/frenchvandal/action-hugo#readme",
  "dependencies": {
    "@actions/cache": "^4.0.3",
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/http-client": "^2.2.3",
    "@actions/tool-cache": "^2.0.2",
    "@alicloud/credentials": "^2.4.3",
    "@alicloud/openapi-client": "^0.4.14",
    "@alicloud/oss20190517": "^1.0.6",
    "@alicloud/tea-util": "^1.4.10",
    "semver": "^7.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/eslint": "^9.6.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint-plugin-prettier": "^3.1.3",
    "@types/lint-staged": "^13.3.0",
    "@types/node": "^22.15.17",
    "@types/semver": "^7.7.0",
    "@types/standard-version": "^7.1.3",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "standard-version": "^9.5.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,json,md,yaml}": "prettier --write"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": "dist/**/*.js",
        "options": {
          "printWidth": 120,
          "singleQuote": false,
          "trailingComma": "none"
        }
      }
    ]
  }
}
