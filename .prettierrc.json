{
"printWidth": 120,
"tabWidth": 2,
"useTabs": false,
"semi": true,
"singleQuote": true,
"trailingComma": "all",
"bracketSpacing": true,
"arrowParens": "avoid",
"parser": "typescript",
"overrides": [
    {
      "files": "*.json",
      "options": { "parser": "json" }
    },
    {
        "files": "*.md",
        "options": { "parser": "markdown" }
      },
      {
        "files": ["*.yml", "*.yaml"],
        "options": { "parser": "yaml" }
      }
  ]
}