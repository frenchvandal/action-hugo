{
  "name": "action-hugo",
  "description": "GitHub Action for Hugo, the world's fastest framework for building websites",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build",
    "test": "jest --coverage",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint ./{src,__tests__}/**/*.ts",
    "lint:fix": "eslint --fix ./{src,__tests__}/**/*.ts",
    "pre-checkin": "npm run format && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frenchvandal/action-hugo.git"
  },
  "keywords": ["actions", "hugo", "build", "package", "website"],
  "author": "frenchvandal",
  "license": "MIT",
  "dependencies": {
    "@actions/cache": "^1.0.6",
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/http-client": "^1.0.9",
    "@actions/tool-cache": "^1.6.1"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.6",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/semver": "^7.3.4",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "@vercel/ncc": "^0.27.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.4.2",
    "jest-circus": "^26.4.2",
    "jest-runtime": "^26.4.2",
    "prettier": "^2.1.2",
    "semver": "^7.3.4",
    "ts-jest": "^26.4.1",
    "typescript": "^4.2.2",
    "typescript-formatter": "^7.2.2"
  }
}
