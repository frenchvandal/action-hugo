{
  "name": "action-hugo",
  "description": "GitHub Action for Hugo, the world's fastest framework for building websites",
  "main": "lib/main.js",
  "engines": {
    "node": ">=12.22.1",
    "npm": ">=6.14.12"
  },
  "scripts": {
    "build": "tsc && ncc build lib/main.js",
    "format": "prettier --write **/*.ts **/*.json **/*.md **/*.yaml",
    "format:check": "prettier --check **/*.ts **/*.json **/*.md **/*.yaml",
    "lint": "eslint ./src/**/*.ts",
    "lint:fix": "eslint --fix ./src/**/*.ts",
    "pre-checkin": "concurrently \"npm:format\" \"npm:build\"",
    "release": "standard-version",
    "prepare": "husky install"
  },
  "repository": "github:frenchvandal/action-hugo",
  "keywords": ["actions", "hugo", "build", "package", "website"],
  "author": "frenchvandal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/frenchvandal/action-hugo/issues"
  },
  "homepage": "https://github.com/frenchvandal/action-hugo#readme",
  "dependencies": {
    "@actions/cache": "^1.0.7",
    "@actions/core": "^1.2.7",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^4.0.0",
    "@actions/http-client": "^1.0.11",
    "@actions/tool-cache": "^1.6.1",
    "semver": "^7.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/concurrently": "^6.0.1",
    "@types/eslint": "^7.2.10",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/prettier": "^2.2.3",
    "@types/semver": "^7.3.5",
    "@types/standard-version": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "@vercel/ncc": "^0.28.5",
    "concurrently": "^6.1.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-github": "^4.1.3",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "standard-version": "^9.3.0",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "*.{js,json,md,ts,yaml}": "prettier --write"
  }
}
